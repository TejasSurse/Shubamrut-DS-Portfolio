<% layout('/layouts/boilerplate') -%>
<% title=listing.Name + " | Admin Dashboard" %>

<section class="p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6"><%= listing.Name %></h1>
    <div class="bg-white p-6 rounded-lg shadow">
        <!-- Images -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
            <% listing.images.forEach(image => { %>
                <img src="<%= image.url %>" alt="<%= listing.Name %>" class="w-full h-48 object-cover rounded">
            <% }) %>
            <% if (!listing.images.length) { %>
                <p class="text-gray-600">No images available.</p>
            <% } %>
        </div>
        <!-- Details -->
        <div class="space-y-4">
            <p><strong>Type:</strong> <%= listing.type %></p>
            <p><strong>Category:</strong> <%= listing.category %></p>
            <p><strong>Location:</strong> <%= listing.location %></p>
            <p><strong>Listing Type:</strong> <%= listing.ListingType %></p>
            <p><strong>Description:</strong> <%= listing.description %></p>
        </div>
        <!-- Buttons -->
        <div class="mt-6 flex space-x-4">
            <a href="/admin/listings/edit/<%= listing._id %>" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">Edit</a>
            <form action="/admin/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition" onclick="return confirm('Are you sure you want to delete this listing?')">Delete</button>
            </form>
        </div>
    </div>
</section>