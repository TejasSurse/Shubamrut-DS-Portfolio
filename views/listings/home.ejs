        <textarea placeholder="Message" rows="6" class="w-full px-4 py-3 border border-gray-300 rounded focus:outline-none focus:border-primary"></textarea>
        <button type="submit" class="w-full bg-primary text-white px-8 py-3 rounded-button font-medium hover:bg-secondary transition-colors">
          Send Message
        </button>
