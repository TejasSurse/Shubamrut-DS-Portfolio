<!-- Contact Section -->
<section class="py-24">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-4xl font-['Playfair_Display'] font-bold text-primary text-center mb-16">Get in Touch</h2>
